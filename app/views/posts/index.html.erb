<% provide(:title, "投稿一覧") %>
<div class="row">
  <div class="col-md-10 offset-md-1">
    <div class="row mb-3">
      <div class="col-md-8">
        <% if @posts.any? %>
          <ul class="list-group list-group-flush">
            <%= render @posts %>
          </ul>
        <% else %>
          <p>N/A</p>
        <% end %>
      </div>
      <div class="col-md-4 bg-white">
      </div>
    </div>
    <%= will_paginate @posts, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
    <%= link_to "+ Tweet", new_post_path, class: "creation btn btn-primary rounded", remote: true %>
  </div>
</div>
<div class="modal fade" tabindex="-1" role="dialog" aria-hidden="true"></div>

<%= javascript_include_tag 'post_link.js' %>